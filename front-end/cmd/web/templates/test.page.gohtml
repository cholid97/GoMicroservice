        mailBtn.addEventListener("click", function(){
            const payload = {
                action: "mail",
                mail: {
                    from : "test@gmail.com",
                    to: "devanser91@gmail.com",
                    subject: "TESTING Email",
                    message: "Hai ini hanya pesan dummy saja, Abaikan"
                }
            }

            const headers = new Headers();
